# Uncomment the next line to define a global platform for your project
platform :ios, '12.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_install_ios_plugin_pods(ios_application_path = nil)
  flutter_root = File.expand_path('..', ios_application_path || File.dirname(File.realpath(__FILE__)))
  load File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
end

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_ios_plugin_pods(File.dirname(File.realpath(__FILE__)))

  # Add this line to include audio_session
  pod 'audio_session', '~> 0.1.23'

  target 'RunnerTests' do
    inherit! :search_paths
  end

end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
  end
end









